<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Class_Groupware</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>POOL_CONFIG</param-name>
    <param-value>
		jdbcDriver=oracle.jdbc.driver.OracleDriver
		jdbcUrl=jdbc:oracle:thin:@localhost:1521:xe
		dbUser=scott
		dbPass=tiger
		validationQuery=select 1
		minIdle=5
		maxTotal=50
		dbcpDriver=org.apache.commons.dbcp2.PoolingDriver
		dbcpUrl=jdbc:apache:commons:dbcp:
		poolName=oracleDBCP
	</param-value>
  </context-param>
  <listener>
    <listener-class>com.ja.classgroupware.base.listener.DBCPInitListener</listener-class>
  </listener>
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>com.ja.classgroupware.base.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>ENCODING_TYPE</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>*.do</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <servlet>
    <servlet-name>ControllerUsingURI</servlet-name>
    <servlet-class>com.ja.classgroupware.base.controller.ControllerUsingURI</servlet-class>
    <init-param>
      <param-name>configFile</param-name>
      <param-value>
        	/WEB-INF/commandHandlerURI.properties
      </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControllerUsingURI</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/view/error/error404.jsp</location>
  </error-page>
</web-app>